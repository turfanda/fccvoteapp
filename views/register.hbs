
<form action="/register" method="post">
  <div class="container">
    
    {{#if hatalar}}
     <div class="alert alert-danger">
       <p>Please Correct Below Errors</p>
       <ul>
      {{#each hatalar}}
         <li>{{msg}}</li>
      {{/each}}
       </ul>
       </div>
    {{/if}}
    
    <label><b>User Name</b></label>
    <input type="text" placeholder="Enter Name" name="name" >
    
    <label><b>User Name</b></label>
    <input type="text" placeholder="Enter User Name" name="username" >
    
    <label><b>Email</b></label>
    <input type="text" placeholder="Enter Email" name="email" >

    <label><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="psw" >

    <label><b>Repeat Password</b></label>
    <input type="password" placeholder="Repeat Password" name="psw2">
    
    <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>

    <div class="clearfix">
      <button type="button"  class="cancelbtn b100 btn btn-danger">Cancel</button>
      <button type="submit" class="signupbtn b100 btn btn-success">Sign Up</button>
    </div>
  </div>
</form>